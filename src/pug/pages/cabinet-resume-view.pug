extends ../template

block variables
  - var title = 'Кабинет'
  - var pageClass = 'cabinet-page'
  - var headerAuth = true
  - var keywords = 'some keyword'
  - var description = 'some description'
  - var mainClass = 'main--office'

block content
  .all
    .cabinet
      .cabinet-header
        .cabinet-header__row
          .cabinet-header__left
            .cabinet-header__title.h2-title просмотр резюме
            .cabinet-header__subtitle преподаватель географии
            .cabinet-header__date Опубликовано 1 июля 2023
            .cabinet-header__date Обновлено 6 июля 2023

          .cabinet-header__right.align-start
            .cabinet-progress
              .progress-bar
                .progress-bar__wrapper(style="width: 74%") 74%
              .progress-view
                +icon('eye')
                .text 21
            .drop-select.js-drop-select.cabinet-header-select--public
              .drop-select__label.js-drop-select__label
                | Опубликовать
              .drop-select__arrow
                +icon('chevron-down')
              .drop-select__dropdown
                .drop-select__dropdown-wrapper
                  ul
                    li.drop-select__item
                      .b-radio.b-radio--blue
                        input(type="radio" name="m1" id="r1")
                        label.b-radio__label(for="r1")
                          span.checked
                          span.b-radio__text.js-drop-select__val(data-label="Опубликовать") Опубликовать
                    li.drop-select__item
                      .b-radio.b-radio--blue
                        input(type="radio" name="m1" id="r2")
                        label.b-radio__label(for="r2")
                          span.checked
                          span.b-radio__text.js-drop-select__val(data-label="Перенести в архив") Перенести в архив
            a.btn.btn--border.btn--md-full(href="#") К списку резюме


      .cabinet-content
        .cabinet-info
          .cabinet-info__row
            .cabinet-info__box
                .cabinet-ava-wrapper.small
                  .cabinet-ava
                    .cabinet-ava-img.active
                      img(src="assets/img/ava.png")
                .cabinet-fio.h3-title иванова анна андреевна
          .cabinet-info__section.no-border
            .cabinet-info__row
              .cabinet-info__md-2
                .form-item
                  .cabinet-info__label Возраст
                  .cabinet-info__text 29 лет
              .cabinet-info__md-2
                .form-item
                  .cabinet-info__label СНИЛС
                  .cabinet-info__text ХХХ-ХХХ-ХХХ YY
            .cabinet-info__row
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label Пол
                  .cabinet-info__text Женский
            .cabinet-info__row
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label Семейное положение
                  .cabinet-info__text Замужем
          .cabinet-info__section
            .cabinet-info__row
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label Место проживания
                  .cabinet-info__text Москва, ЦАО, Арбат
            .cabinet-info__row
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label Телефон
                  .cabinet-info__text +7 (495) 123-45-67
            .cabinet-info__row
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label E-mail
                  .cabinet-info__text
                    a(href="#") mojemail@mail.ru
          .cabinet-info__section
            .cabinet-info__row.--x2
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label СНИЛС
                  .cabinet-info__text ХХХ-ХХХ-ХХХ YY
            .cabinet-info__row.--x2
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label Готовность к переезду
                  .cabinet-info__text Не готова
            .cabinet-info__row.--x2
              .cabinet-info__md-1
                .form-item
                  .cabinet-info__label Ссылки на соц.сети
                  .cabinet-info__text
                    a(href="#") https://vk.com/id23456789
                    br
                    a(href="#") https://vk.com/id23456789
            .cabinet-info__bottom
              .cabinet-info__error
                | Вы зарегистрированы через портал ДПО. <br>
                | Чтобы изменить данные, перейдите на сайт портала ДПО.
              .cabinet-info__btns
                a.btn.btn--border(href="#") Заявка на удаление профиля
                input.btn(type="submit" disabled value="Редактировать профиль")


