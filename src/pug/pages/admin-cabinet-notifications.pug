extends ../template-admin

block variables
  - var title = 'Кабинет админа_Уведомления'
  - var pageClass = 'cabinet-page mode-admin'
  - var headerAuth = true
  - var keywords = 'some keyword'
  - var description = 'some description'
  - var mainClass = 'main--office'
  - var isAdmin = true

block content
  .all
    .cabinet
      .cabinet-header
        .cabinet-header__row
          .cabinet-header__left
            .cabinet-header__title.h2-title Уведомления
            .cabinet-header__tags
              .cabinet-header__tag-item
                | Непрочитанные
                span.highlight 5

        .cabinet-header__filters
          .drop.drop--small.js-drop
            .drop__label.js-drop__label
              | Фильтр
              .drop__arrow
                +icon('chevron-down')
            .drop__dropdown
              .drop__dropdown-wrapper
                ul
                  li.drop__item
                    .b-checkbox.b-subeckbox
                      input(type="checkbox" id="fd1")
                      label.b-checkbox__label(for="fd1")
                        span.checked
                          +icon('check')
                        span.b-checkbox__text Прочитанные

                  li.drop__item
                    .b-checkbox.b-subeckbox
                      input(type="checkbox" id="ff1")
                      label.b-checkbox__label(for="ff1")
                        span.checked
